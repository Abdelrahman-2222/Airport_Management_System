@page "/maintenancetask/create"
@using System.ComponentModel.DataAnnotations
@using Airplane_UI.Contracts.LuggageMaintnance
@inject IMaintenanceTaskService MaintenanceTaskService
@inject NavigationManager Navigation


<h3>Create New MaintenanceTask</h3>

<EditForm Model="@maintenanceTaskModel" OnValidSubmit="HandleCreateAsync">

    <DataAnnotationsValidator />

    <div class="mb-3">
        <label class="form-label">maintenanceTask Name</label>
        <InputText class="form-control" @bind-Value="maintenanceTaskModel.Name" />
        <ValidationMessage For="@(() => maintenanceTaskModel.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <InputText class="form-control" @bind-Value="maintenanceTaskModel.Description" />
        <ValidationMessage For="@(() => maintenanceTaskModel.Description)" />
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary" disabled="@isSaving">
        @if (isSaving)
        {
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <text>Saving...</text>
        }
        else
        {
            <text>Save</text>
        }
    </button>
    <button type="button" class="btn btn-secondary" @onclick="GoBack">Cancel</button>

</EditForm>

