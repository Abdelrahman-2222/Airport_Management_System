@page "/checkpoint-log/details/{id:int}"
@using Airplane_UI.Contracts.SecurityGates
@using Airplane_UI.DTOs.SecurityGates.CheckpointLog
@inject ICheckpointLogService CheckpointLogService
@inject NavigationManager Navigation

@rendermode InteractiveServer

<h3>Checkpoint Log Details</h3>

@if (isLoading)
{
    <p>Loading...</p>
}
else if (logDetails == null)
{
    <p>Checkpoint log not found.</p>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Checkpoint Log #@logDetails.Id</h5>
            <p class="card-text">
                <strong>Checkpoint ID:</strong>
                @logDetails.CheckpointID
            </p>
            <p class="card-text">
                <strong>Timestamp:</strong>
                @logDetails.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")
            </p>
            <p class="card-text">
                <strong>Reported Wait Time:</strong>
                @if (isEditing)
                {
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Hours</label>
                            <InputNumber class="form-control" @bind-Value="waitHours" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Minutes</label>
                            <InputNumber class="form-control" @bind-Value="waitMinutes" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Seconds</label>
                            <InputNumber class="form-control" @bind-Value="waitSeconds" />
                        </div>
                    </div>
                }
                else
                {
                    @logDetails.ReportedWaitTime.ToString(@"hh\:mm\:ss")
                }
            </p>
        </div>
        <div class="card-footer">
            @if (isEditing)
            {
                <button class="btn btn-success me-2" @onclick="SaveAsync" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <text>Saving...</text>
                    }
                    else
                    {
                        <text>Save</text>
                    }
                </button>
                <button class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
            }
            else
            {
                <button class="btn btn-primary me-2" @onclick="StartEdit">Update</button>
                <button class="btn btn-danger" @onclick="ShowDeleteConfirmation">Delete</button>
            }
        </div>
    </div>

    @if (showDeleteConfirmation)
    {
        <div class="modal d-block" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Delete</h5>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this checkpoint log?</p>
                        <p>This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" @onclick="DeleteAsync" disabled="@isDeleting">
                            @if (isDeleting)
                            {
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                <text>Deleting...</text>
                            }
                            else
                            {
                                <text>Delete</text>
                            }
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    }
}

