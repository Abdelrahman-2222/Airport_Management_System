@page "/security-incident"
@using Airplane_UI.Contracts.SecurityGates
@using Airplane_UI.DTOs.SecurityGates.SecurityIncident
@using MudBlazor
@rendermode InteractiveServer
@inject ISecurityIncidentService SecurityIncidentService
@inject NavigationManager Navigation

<PageTitle>Security Incident</PageTitle>

<MudTable Items="@SecurityIncidents" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <ToolBarContent>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => Navigation.NavigateTo("/security-incident/create"))" Class="mb-3">
            Create New Security Incident
        </MudButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Location</MudTh>
        <MudTh>Time</MudTh>
        <MudTh>Severity</MudTh>
        <MudTh>Assigned Staff ID</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Location">@context.Location</MudTd>
        <MudTd DataLabel="Time">@context.Time.ToString("yyyy-MM-dd HH:mm:ss")</MudTd>
        <MudTd DataLabel="Severity">@context.Severity</MudTd>
        <MudTd DataLabel="Assigned Staff ID">@(context.AssignedStaffID?.ToString() ?? "N/A")</MudTd>
        <MudTd DataLabel="Actions">
            <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="@(() => NavigateToDetails(context.Id))">
                View Details
            </MudButton>
        </MudTd>
    </RowTemplate>
</MudTable>

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <MudAlert Severity="Severity.Error" Class="mt-4">
        @_errorMessage
    </MudAlert>
}



