@page "/airport-staff/create"
@using Airplane_UI.Contracts.SecurityGates
@using Airplane_UI.DTOs.SecurityGates.AirportStaff
@inject IAirportStaffService AirportStaffService
@inject NavigationManager Navigation

@rendermode InteractiveServer

<h3>Create New Airport Staff</h3>

<EditForm Model="@staffModel" OnValidSubmit="HandleCreateAsync">

    <DataAnnotationsValidator />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <InputText class="form-control" @bind-Value="staffModel.Name" />
        <ValidationMessage For="@(() => staffModel.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <InputText class="form-control" @bind-Value="staffModel.Role" />
        <ValidationMessage For="@(() => staffModel.Role)" />
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary" disabled="@isSaving">
        @if (isSaving)
        {
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <text>Saving...</text>
        }
        else
        {
            <text>Save</text>
        }
    </button>
    <button type="button" class="btn btn-secondary" @onclick="GoBack">Cancel</button>

</EditForm>



