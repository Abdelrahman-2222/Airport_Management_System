@page "/airline"
@using Airplane_UI.Contracts.AirlineCore
@using Airplane_UI.DTOs.AirlineCore.AirlineDTOs
@using MudBlazor
@rendermode InteractiveServer
@using System.Net.Http.Json
@inject IAirlineService AirlineService
@inject NavigationManager Navigation

<PageTitle>Airline</PageTitle>

<MudTable Items="@Airlines" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>IATA Code</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="IATA Code">@context.IATA_Code</MudTd>
        <MudTd DataLabel="Actions">
            <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="() => NavigateToDetails(context.Id)">
                View Details
            </MudButton>
        </MudTd>
    </RowTemplate>
</MudTable>


@if (!string.IsNullOrEmpty(_errorMessage))
{
    <MudAlert Severity="Severity.Error" Class="mt-4">
        @_errorMessage
    </MudAlert>
}
