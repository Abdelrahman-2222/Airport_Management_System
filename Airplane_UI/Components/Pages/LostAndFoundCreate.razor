@page "/lostandfound/create"
@using Airplane_UI.Contracts.LuggageMaintnance
@using System.ComponentModel.DataAnnotations
@using Airplane_UI.Enums
@inject ILostAndFoundService LostAndFoundService
@inject NavigationManager Navigation

<h3>Create New LostAndFound</h3>

<EditForm Model="@lostAndFoundModel" OnValidSubmit="HandleCreateAsync">

    <DataAnnotationsValidator />

    <div class="mb-3">
        <label class="form-label">ItemDescription</label>
        <InputText class="form-control" @bind-Value="lostAndFoundModel.ItemDescription" />
        <ValidationMessage For="@(() => lostAndFoundModel.ItemDescription)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <MudSelect @bind-Value="lostAndFoundModel.Status" >
            @foreach(var val in Enum.GetValues<LostAndFoundStatus>()) 
                {
                    <MudSelectItem Value="@val">@val.ToString()</MudSelectItem>
                }
        </MudSelect>

    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary" disabled="@isSaving">
        @if (isSaving)
        {
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <text>Saving...</text>
        }
        else
        {
            <text>Save</text>
        }
    </button>
    <button type="button" class="btn btn-secondary" @onclick="GoBack">Cancel</button>

</EditForm>

