@page "/passenger"
@using MudBlazor
@rendermode InteractiveServer

=

<PageTitle>Airline</PageTitle>

<h1>Airline</h1>

<MudGrid Class="mt-4" GutterSize="3">
    @foreach (var entity in _entities)
    {
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="3" Class="pa-4">
                <MudCardContent>
                    <MudText Typo="Typo.h6" Bold="true">@entity</MudText>
                    <button class="btn btn-primary">@entity</button>
                </MudCardContent>
            </MudCard>
        </MudItem>
    }
</MudGrid>

@code {
    private readonly string[] _entities = new[]
    {
        "Airline",
        "Aircraft",
        "Airport",
        "Flight",
        "FlightManifest",
        "Passenger"
    };
}
