@page "/staff-shift/create"
@using Airplane_UI.Contracts.SecurityGates
@using Airplane_UI.Contracts.GateAssignments
@using Airplane_UI.DTOs.SecurityGates.StaffShift
@inject IStaffShiftService StaffShiftService
@inject NavigationManager Navigation

@rendermode InteractiveServer

<h3>Create New Staff Shift</h3>

<EditForm Model="@shiftModel" OnValidSubmit="HandleCreateAsync">

    <DataAnnotationsValidator />

    <div class="mb-3">
        <label class="form-label">Staff</label>
        <select class="form-select" @bind="shiftModel.StaffID">
            <option value="0">-- Select Staff --</option>
            @foreach (var s in staffOptions)
            {
                <option value="@s.Id">@s.Name</option>
            }
        </select>
        <ValidationMessage For="@(() => shiftModel.StaffID)" />
        @if (!string.IsNullOrEmpty(staffLoadError))
        {
            <div class="text-danger mt-1">@staffLoadError</div>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Assigned Checkpoint (Optional)</label>
        <select class="form-select" @bind="shiftModel.AssignedCheckpointID">
            <option value="">-- None --</option>
            @foreach (var c in checkpointOptions)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
        <ValidationMessage For="@(() => shiftModel.AssignedCheckpointID)" />
        @if (!string.IsNullOrEmpty(checkpointLoadError))
        {
            <div class="text-danger mt-1">@checkpointLoadError</div>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Assigned Customs Desk (Optional)</label>
        <select class="form-select" @bind="shiftModel.AssignedDeskID">
            <option value="">-- None --</option>
            @foreach (var d in customsDeskOptions)
            {
                <option value="@d.Id">Desk @d.DeskNumber (Terminal @d.TerminalID)</option>
            }
        </select>
        <ValidationMessage For="@(() => shiftModel.AssignedDeskID)" />
        @if (!string.IsNullOrEmpty(customsDeskLoadError))
        {
            <div class="text-danger mt-1">@customsDeskLoadError</div>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Start Time</label>
        <input type="datetime-local" class="form-control" @bind="shiftModel.StartTime" />
        <ValidationMessage For="@(() => shiftModel.StartTime)" />
    </div>

    <div class="mb-3">
        <label class="form-label">End Time</label>
        <input type="datetime-local" class="form-control" @bind="shiftModel.EndTime" />
        <ValidationMessage For="@(() => shiftModel.EndTime)" />
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary" disabled="@isSaving">
        @if (isSaving)
        {
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <text>Saving...</text>
        }
        else
        {
            <text>Save</text>
        }
    </button>
    <button type="button" class="btn btn-secondary" @onclick="GoBack">Cancel</button>

</EditForm>

