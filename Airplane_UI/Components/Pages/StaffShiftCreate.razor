@page "/staff-shift/create"
@using Airplane_UI.Contracts.SecurityGates
@using Airplane_UI.DTOs.SecurityGates.StaffShift
@inject IStaffShiftService StaffShiftService
@inject NavigationManager Navigation

@rendermode InteractiveServer

<h3>Create New Staff Shift</h3>

<EditForm Model="@shiftModel" OnValidSubmit="HandleCreateAsync">

    <DataAnnotationsValidator />

    <div class="mb-3">
        <label class="form-label">Staff ID</label>
        <InputNumber class="form-control" @bind-Value="shiftModel.StaffID" />
        <ValidationMessage For="@(() => shiftModel.StaffID)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Assigned Checkpoint ID (Optional)</label>
        <InputNumber class="form-control" Value="@shiftModel.AssignedCheckpointID" ValueChanged="@((int? value) => shiftModel.AssignedCheckpointID = value)" ValueExpression="@(() => shiftModel.AssignedCheckpointID)" />
        <ValidationMessage For="@(() => shiftModel.AssignedCheckpointID)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Assigned Desk ID (Optional)</label>
        <InputNumber class="form-control" Value="@shiftModel.AssignedDeskID" ValueChanged="@((int? value) => shiftModel.AssignedDeskID = value)" ValueExpression="@(() => shiftModel.AssignedDeskID)" />
        <ValidationMessage For="@(() => shiftModel.AssignedDeskID)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Start Time</label>
        <input type="datetime-local" class="form-control" @bind="shiftModel.StartTime" />
        <ValidationMessage For="@(() => shiftModel.StartTime)" />
    </div>

    <div class="mb-3">
        <label class="form-label">End Time</label>
        <input type="datetime-local" class="form-control" @bind="shiftModel.EndTime" />
        <ValidationMessage For="@(() => shiftModel.EndTime)" />
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary" disabled="@isSaving">
        @if (isSaving)
        {
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <text>Saving...</text>
        }
        else
        {
            <text>Save</text>
        }
    </button>
    <button type="button" class="btn btn-secondary" @onclick="GoBack">Cancel</button>

</EditForm>

