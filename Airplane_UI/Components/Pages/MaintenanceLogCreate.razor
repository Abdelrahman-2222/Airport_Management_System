@page "/maintenancelog/create"
@using System.ComponentModel.DataAnnotations
@using Airplane_UI.Contracts.LuggageMaintnance
@using Airplane_UI.Enums
@inject IMaintenanceLogService MaintenanceLogService
@inject NavigationManager Navigation


<h3>Create New MaintenanceLog</h3>

<EditForm Model="@maintenanceLogModel" OnValidSubmit="HandleCreateAsync">

    <DataAnnotationsValidator />

    <div class="mb-3">
        <label class="form-label">Description</label>
        <InputText class="form-control" @bind-Value="maintenanceLogModel.Description" />
        <ValidationMessage For="@(() => maintenanceLogModel.Description)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <MudSelect @bind-Value="maintenanceLogModel.Status">
            @foreach (var val in Enum.GetValues<MaintenanceStatus>())
            {
                <MudSelectItem Value="@val">@val.ToString()</MudSelectItem>
            }
        </MudSelect>
    </div>

    
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }

    <button type="submit" class="btn btn-primary" disabled="@isSaving">
        @if (isSaving)
        {
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            <text>Saving...</text>
        }
        else
        {
            <text>Save</text>
        }
    </button>
    <button type="button" class="btn btn-secondary" @onclick="GoBack">Cancel</button>

</EditForm>

