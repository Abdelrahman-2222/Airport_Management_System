@inherits LayoutComponentBase

<div class="page">
    @* Required - Must be first *@
    <MudThemeProvider />

    @* Needed for dialogs - Should come before components that might use dialogs *@
    <MudDialogProvider />

    @* Needed for snackbars - Should come before components that might use snackbars *@
    <MudSnackbarProvider />

    @* Popover provider - Should come after other providers *@
    <MudPopoverProvider />

    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>